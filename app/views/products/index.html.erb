<header>
      <div id="head">
        <div class="logo">
          <h1>Akina<span class="logo-title">_</span>i</h1>
        </div>
          <div class="search">
            <%= search_form_for @q do |f| %>
              <%= f.label :name, "商品" %>
              <%= f.search_field :name_cont %>
            <%= f.submit "検索" %>
            <% end %>
          </div>
          <nav>
            <% if customer_signed_in? %>
            <ul class="global-nav">
              <li class="nav-item"><i class="fas fa-align-left"></i><a href="#"> カテゴリーから探す</a></li>
              <li class="nav-item1"><i class="fas fa-tags"></i><a href="#">ブランドから探す</a></li>
              <li class="nav-item3"><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %></a></li>
            </ul>
            <% else %>
            <ul class="global-nav">
              <li class="nav-item"><i class="fas fa-align-left"></i><a href="#"> カテゴリーから探す</a></li>
              <li class="nav-item1"><i class="fas fa-tags"></i><a href="#">ブランドから探す</a></li>
              <li class="nav-item2"><%= link_to '新規会員登録', new_customer_registration_path %></li>
              <li class="nav-item3"><%= link_to 'ログイン', new_customer_session_path %></li>
            </ul>
            <% end %>
          </nav>
      </div>
    </header>

<% if customer_signed_in? %>
	<div class="iine-main-box">
		<div class="iine-box">
			<div class="iine-category">
